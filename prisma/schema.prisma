datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model users {
    id          BigInt @id @default(autoincrement())
    uid         String @unique @db.Uuid
    email       String @unique
    firstname   String
    lastname    String
    phonenumber String @unique

    @@unique([firstname, lastname])
}
