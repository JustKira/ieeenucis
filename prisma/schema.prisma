datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model users {
    id          BigInt     @id @default(autoincrement())
    uid         String     @unique @db.Uuid
    email       String     @unique
    firstname   String
    lastname    String
    phonenumber String     @unique
    userRole    userRole[]

    @@unique([firstname, lastname])
}

model roles {
    id          BigInt     @id @default(autoincrement())
    name        String     @unique
    permissions String[]
    userRole    userRole[]
}

model userRole {
    id      BigInt @id @default(autoincrement())
    user    users  @relation(fields: [usersId], references: [id], onDelete: Cascade)
    usersId BigInt
    role    roles  @relation(fields: [rolesId], references: [id], onDelete: Cascade)
    rolesId BigInt
}
